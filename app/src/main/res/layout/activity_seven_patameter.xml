<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.hope.leadmap.mapdemo.sevenparameter.SevenPatameterActivity"
    >

    <LinearLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置目标坐标系："/>
        <Button
            android:id="@+id/xian_80"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西安80"/>

        <Button
            android:id="@+id/beijing_54"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京54"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/text"
        android:layout_below="@id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转换坐标："/>
    <EditText
        android:id="@+id/edit_lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入纬度"
        android:text="24.71584962"/>
    <EditText
        android:id="@+id/edit_lon"
        android:layout_below="@+id/edit_lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入经度"
        android:text="118.620144"/>


    <Button
        android:id="@+id/button_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/edit_lon"
        android:layout_marginTop="16dp"
        android:text="转换"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/but_move_lat_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:text="+"
            />

        <EditText
            android:id="@+id/edit_move_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入偏移量..."
            android:inputType="numberDecimal"
            android:numeric="signed"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/but_move_lon_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:text="+"
            />

        <EditText
            android:id="@+id/edit_move_lon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入偏移量..."
            android:inputType="numberDecimal"
            android:numeric="signed"
            />

    </LinearLayout>


    <Button
        android:id="@+id/but_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="偏 移"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#454545"
        ></View>

    <!--<TextView-->
        <!--android:id="@+id/text_result"-->
        <!--android:layout_below="@+id/button_transfer"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="转换后坐标为："/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x坐标："/>
            <TextView
                android:id="@+id/text_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y坐标："/>
            <TextView
                android:id="@+id/text_lon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
